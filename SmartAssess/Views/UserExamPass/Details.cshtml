@model Presentation_Layer.ViewModels.UserExamAttemptViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserExamPassViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exam.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGrade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalGrade)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-4">
            <h4>Questions:</h4>
        </dt>
        <dd class="col-sm-4">
            <h4>Answers:</h4>
        </dd>
        <dd class="col-sm-4">
            <h4>Grade:</h4>
        </dd>
        @for (var i = 0; i < Model.UserAnswers.Count; i++)
        {
            <dt class="col-sm-4">
                @Html.DisplayFor(model => model.UserAnswers[i].Question.QuestionText)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.UserAnswers[i].AnswerText)
            </dd>
            <dd class="col-sm-4">
                @{
                    var grade = Model.UserAnswers[i].Grade;
                    var displayGrade = grade != null ? grade.ToString() : "-";
                }
                @displayGrade
            </dd>
        }
    </dl>
    
    <span style="font-weight: bold;">Total grade: </span>
    @Html.DisplayFor(model => model.TotalGrade)
    <br/>
    <br />

    <dl class="row">
        <dt class="col-sm-12">
            <h4>Feedback:</h4>
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Feedback)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
</div>
