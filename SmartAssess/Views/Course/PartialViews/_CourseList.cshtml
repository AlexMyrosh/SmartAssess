@model List<Presentation_Layer.ViewModels.Course.Shared.CourseViewModel>
@{
    const int descriptionSubStringLength = 200;
}

@foreach (var course in Model)
{
    <div class="col-xxl-3 col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-3 d-flex align-items-stretch">
        <div class="card">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" style="text-decoration: none; color: black;">
                <img src="/images/banners/default-course-image.png" class="card-img-top"
                     alt="Hollywood Sign on The Hill"/>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@course.Name</h5>
                    @if (!string.IsNullOrWhiteSpace(course.LongDescription))
                    {
                        <p class="card-text">
                            @(course.LongDescription?.Substring(0, Math.Min(descriptionSubStringLength, course.LongDescription.Length)))
                            @if (course.LongDescription?.Length > descriptionSubStringLength)
                            {
                                <span>...</span>
                            }
                        </p>
                    }
                </div>
            </a>
        </div>
    </div>
}