@model UserExamPassViewModel

<h2>Exam</h2>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ExamName)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ExamName)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ExamDescription)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ExamDescription)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ExamSubject)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ExamSubject)
    </dd>
</dl>

<form method="post" asp-controller="Exam" asp-action="Pass">
    @for (var i = 0; i < Model.UserAnswers.Count; i++)
    {
        <h5>@Model.UserAnswers[i].QuestionText</h5>
        <textarea asp-for="UserAnswers[i].AnswerText" class="form-control"></textarea>
        <span asp-validation-for="UserAnswers[i].AnswerText" class="text-danger"></span>
        @Html.HiddenFor(model => model.UserAnswers[i].QuestionId)
    }

    @Html.HiddenFor(model => model.ExamId)
    <br/>
    <button type="submit" class="btn btn-outline-success">Submit</button>
    <a asp-action="GetAll" class="btn btn-outline-warning">Back to List</a>
</form>