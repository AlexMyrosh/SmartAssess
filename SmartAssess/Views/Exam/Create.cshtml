@model Presentation_Layer.ViewModels.ExamViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create exam for course "@Html.DisplayFor(model => model.Course.Name)"</h1>

<div class="container">
    <form asp-action="Create">
        @await Html.PartialAsync("PartialViews/_ExamForm", Model)
        <br />
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    @Html.HiddenFor(model=>model.Course.Id)
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/Exam.js"></script>
}